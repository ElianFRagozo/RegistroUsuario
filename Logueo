using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace MenuOpciones1
{
    class logueo
    {
        static void Main (string[] args)
        {
            int clave = 123;
            int claveUsuario;
            do
            {
               console.Clear();
               console.WriteLine("PROGRAMA COMO APLICACION AL MENU DE OPCIONES");
               console.WriteLine("Elian Fragozo Ruiz");
               console.WriteLine("VALIDANDO LAS CREDENCIALES DE ACCESO\n\n");
               console.WriteLine("Ingrese la clave de acceso:");
               claveUsuario = int.Parse(console.ReadLine());
               if (claveUsuario == clave)
               MenuOpciones miMenu = new MenuOpciones();
               {
                   miMenu.VerOpciones();
               }
               else
               {
                   console.WriteLine("La clave digitada no es valida\n\n");
                   console.ReadKey();
               }
            } while (claveUsuario != clave);
        }
    }
}
